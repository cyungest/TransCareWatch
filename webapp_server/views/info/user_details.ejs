<%- include('../partials/header', {title:"Yahtzee: User Details", username:username}) -%>

</head>
<body class="text-center">
  <div class="modal-body row">
    <div class="col-md-6">
        <main class="form-signin">
            <form action = "/users" method = "POST">
              <%if (username){%>
                <h1 class="h3 mb-3 fw-normal">Welcome to TransCareWatch!</h1>
                <div class="form-floating">
                  <input type="email" class="form-control" id="email_input" name="email" value="<%=email%>" placeholder="Email">
                  <label for="floatingEmail">Email</label>
                </div>
                <div class="form-floating">
                  <input type="password" class="form-control" id="password_input" name="password" value="<%=password%>" placeholder="Password">
                  <label for="floatingPassword">Password</label>
                </div>
                <div class="button-box col-lg-14"> 
                  <button class="btn btn-info" id="create_button" type="submit">Create/Update User</button>
                  <a class="btn btn-danger" id="delete_link" href="/users/delete/<%=username%>" role="button">Delete User</a>
                </div>
              <% }else{ %>
               <a class="btn btn-primary" href="/auth/google" role="button">Create an Account with Google</a>
              <% } %>
            </form>
          </main>
    </div>
    <div class="col-md-6">  
        <ol id="user_games_ol">
          <li><h1>Recent Headlines</h1></li>
        </ol>  
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
<%- include ('../partials/footer') -%>